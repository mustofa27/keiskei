<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/gambar_cart"
        android:layout_width="0dp"
        android:layout_height="@dimen/image_size_cart"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        android:src="@drawable/logo_splash_new" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_weight="3">

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nama_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="nama produk"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/delete"
                android:layout_width="@dimen/small_button_height"
                android:layout_height="@dimen/small_button_height"
                android:background="@android:color/transparent"
                android:text="X" />
        </LinearLayout>

        <Spinner
            android:id="@+id/jumlah"
            android:layout_width="@dimen/tab_height"
            android:layout_height="@dimen/button_height"
            android:layout_below="@id/top"
            android:spinnerMode="dropdown"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/harga_cart"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentRight="true"
            android:layout_below="@id/top"
            android:gravity="center"
            android:text="RP 100000,00"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
